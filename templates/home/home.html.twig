{% extends 'base.html.twig' %}

{% block title %}Symfbnb{% endblock %}

{% block body %}
    <div class="container">
        <section class="jumbotron mt-5">
            <h1 class="display-3">Bienvenue sur Symfbnb !</h1>
            <p class="lead">Nous mettons en relation les voyages et les propriétaires de biens exceptionnels en location.</p>
            <hr class="my-4">
            <p>Envie de passer le weekend dans un logement insolite ? Vous êtes au bon endroit !</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="{{ path('ads_list') }}" role="button">Voir nos annonces</a>
            </p>
        </section>
        <section>
            <h2 class="h1 my-5">Nos coups de coeur</h2>
            <div class="row">
                {% for data in ads %}
                    {% include 'ad/_ad.html.twig' with {'ad': data.annonce} %}
                {% endfor %}
            </div>
        </section>
        <section>
            <h2 class="h1 my-5">Nos meilleurs propriétaires</h2>
            <div class="row">
                {% for data in users %}
                    <div class="col">
                        <div class="card border-primary mb-3">
                            <div class="card-body">
                                <h4 class="card-title">{{data.user.fullName}}</h4>

                                <hr>

                                <div class="card-text">
                                    <img src="{{data.user.picture}}" alt="Avatar de {{data.user.fullName}}" class="float-left mr-3">
                                    <p>{{data.user.introduction}}</p>
                                    <a href="{{ path('user_show', {'slug': data.user.slug})}}" class="btn btn-success float-right">En savoir plus</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
        </section>


    </div>

{% endblock %}
